<div class="algoritmos">
        <!--Número algoritmo y Tema-->
        <div class="container">
                <div class="row mb-2">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                                <label>Algoritmo número: {{mod}}</label>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                                <label>Paso a Paso: {{tema}}</label>
                        </div>
                </div>
        </div>
        <!--Enunciado y Código-->
        <div class="container">
                <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                                <textarea style="height: 200px; padding: 20px;" placeholder="ENUNCIADO" disabled>{{enunciado}}</textarea>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12; mb-3">
                                <textarea style="height: 200px; padding: 20px" placeholder="CÓDIGO" disabled>{{codigo}}</textarea>
                        </div>
                </div>
        </div>
         <!--Ejecución/Botones y Paso a paso-->
        <div class="container">
                <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="Steps_flex_horizontales">
                                        <textarea style="height: 30px;" placeholder="Entrada:">{{input}}</textarea><br>
                                        <textarea style="height: 90px ;" placeholder="Salida" disabled>Salida: {{output}}</textarea>
                                </div>
                                <form action="" class="mt-3">
                                        <button href="" class="btn btn-success rounded-pill" id="seg"><i class="fa fa-terminal"></i>  Ejecutar</button>       
                                </form>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="Steps_flex_verticales">
                                                <textarea style="height: 144px; padding: 20px" placeholder="DEFINICIÓN" disabled>{{definicion}}</textarea>
                                                <textarea style="height: 144px; padding: 20px" placeholder="LINEA" disabled>{{linea}}</textarea>
                                </div>
                                <form action="" class="mt-3">
                                        <button href="" class="btn btn-primary rounded-pill" id="ant"><i class="fa fa-arrow-left"></i>  Anterior</button>
                                        <button href="" class="btn btn-primary rounded-pill" id="seg">Siguiente  <i class="fa fa-arrow-right"></i></button>        
                                </form>
                        </div>
                </div>
        </div>
</div>