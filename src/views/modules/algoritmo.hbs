<div class="algoritmos">
        <!--Número algoritmo y Tema-->
        <div class="container">
                <div class="row mb-2">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                                <label>Algoritmo número: {{mod}}</label>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                                <label>Paso a Paso: {{tema}}</label>
                        </div>
                </div>
        </div>
        <!--Enunciado y Código-->
        <div class="container">
                <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                                <textarea style="height: 200px; padding: 20px;" placeholder="ENUNCIADO" disabled>{{enunciado}}</textarea>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12; mb-3">
                                <textarea style="height: 200px; padding: 20px" placeholder="CÓDIGO" disabled>{{codigo}}</textarea>
                        </div>
                </div>
        </div>
         <!--Ejecución/Botones y Paso a paso-->
        <div class="container">
                <div class="row">
                   
                        <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="Steps_flex_horizontales">
                                        <textarea style="height: 30px;" placeholder="Entrada:">{{input}}</textarea>
                                        <textarea style="height: 90px; margin-top: 25px" placeholder="Salida:" disabled> {{output}}</textarea>
                                </div>
                               <div class="mt-3">
                                        <form action="/algorithm/{{mod}}" method="POST">
                                                <button id="run" type="submit" class="btn btn-success rounded-pill"><i class="fa fa-terminal"></i>  Ejecutar</button>       
                                        </form> 
                               </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="Steps_flex_verticales">
                                                <textarea style="height: 144px; padding: 20px" placeholder="DEFINICIÓN" >{{definicion}}</textarea>
                                                <textarea style="height: 144px; padding: 20px" placeholder="LINEA" disabled>{{linea}}</textarea>
                                </div>
                                <div class="Steps_flex_verticales">
                                        <form action="/algorithm/ant/{{mod}}" method="GET" class="mt-3">
                                                <button type="submit" class="btn btn-primary rounded-pill"><i class="fa fa-arrow-left"></i>  Anterior</button>   
                                        </form> 
                                        <form action="/algorithm/sgt/{{mod}}" method="GET" class="mt-3">
                                                <button type="submit" class="btn btn-primary rounded-pill"><i class="fa fa-arrow-right"></i> Siguiente </button>        
                                        </form> 
                                </div>
                        </div>    
                        <a href="/algorithm/{{sig}}">siguiente</a>
                        <a href="/algorithm/{{ant}}">Anterior</a>
                </div>
        </div>
</div>